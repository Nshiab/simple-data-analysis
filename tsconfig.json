{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./", 
    "target": "ES2016",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/unit/**/*"],
  "exclude": ["node_modules"], 
  "strict": true,
}