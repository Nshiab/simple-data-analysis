{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2016",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@observablehq/plot": [
        "./src/types/modules/@observablehq_plot"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  },
}